[Unit]
Description=Particl daemon
After=network.target

[Service]
Type=forking
PIDFile=%h/.particl/particl.pid
ExecStart=%h/particlcore/particld -daemon -pid=%h/.particl/particl.pid -conf=%h/.particl/particl.conf -datadir=%h/.particl

ExecStop=%h/particlcore/particl-cli -conf=%h/.particl/particl.conf stop
ExecStop=/usr/bin/sleep 25

Restart=no
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
